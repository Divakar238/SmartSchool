<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudent"
    android:background="@mipmap/backgroundsubjectlist">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        tools:context=".AddStudent">

        <TextView
            android:id="@+id/passedclassnamedatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="142dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="170dp"
            android:fontFamily="serif"
            android:text="wwww"
            android:textAllCaps="true"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/studentNamedatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
            android:layout_marginTop="340dp"

            android:autoSizeMaxTextSize="2dp"
            android:autoSizeTextType="uniform"
            android:textColor="#000000"
            android:ems="10"
            android:hint="Student Name"
            android:inputType="text"

            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/passwordd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
            android:layout_marginTop="420dp"
            android:autoSizeMaxTextSize="2dp"
            android:autoSizeTextType="uniform"
            android:ems="10"
            android:hint="Student Password"
            android:inputType="text"

            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/mcneeseiddatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"

            android:autoSizeMaxTextSize="2dp"
            android:autoSizeTextType="uniform"
            android:textColor="#000000"
            android:ems="10"
            android:hint="Student ID"
            android:inputType="text"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:textColorHint="#000000" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/addStudentdatabase"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passwordd"
            android:layout_alignBottom="@+id/passwordd"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-100dp"
            android:background="@drawable/loginbutton"
           android:textColor="#ffffff"
            android:padding="20dp"
            android:text="Add" />


    </RelativeLayout>
</RelativeLayout>
