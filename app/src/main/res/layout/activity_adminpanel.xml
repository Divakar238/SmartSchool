<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminpanel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/backgroundsubjectlist"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/passwordRegister"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="375dp"
         android:layout_centerHorizontal="true"
            android:autoSizeMaxTextSize="2dp"
            android:autoSizeTextType="uniform"
            android:drawableLeft="@drawable/ic_lock_blue_24dp"
            android:ems="10"
            android:hint="  Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:password="true"
            android:textAllCaps="true"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/emailnameregister"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:autoSizeMaxTextSize="2dp"
            android:autoSizeTextType="uniform"

            android:drawableLeft="@drawable/ic_email_blue_24dp"
            android:ems="10"
            android:hint="  Enter Teacher's ID"
            android:inputType="text"

            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:textColorHint="#000000" />

        <Spinner
            android:id="@+id/classnameregister"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="225dp"

            android:ems="10"
            android:inputType="text"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:popupBackground="@drawable/submit"
            android:popupElevation="@android:dimen/app_icon_size"
            android:popupTheme="@drawable/submit"
            android:textAllCaps="true"
            android:textColorHint="#ffffff" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/passwordRegister"

            android:layout_marginBottom="-114dp"
            android:background="@drawable/loginbutton"
            android:textColor="#ffffff"
            android:padding="20dp"
            android:text="Register" />


    </RelativeLayout>
</RelativeLayout>


