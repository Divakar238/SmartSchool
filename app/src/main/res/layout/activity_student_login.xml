<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".StudentLogin"
    android:background="@mipmap/backgroundsubjectlist">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="199dp"
        android:layout_height="164dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo" />

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:background="@drawable/loginbackground"
        android:elevation="35dp"
        tools:context=".StudentLogin">


        <EditText
            android:id="@+id/editpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:autoSizeMaxTextSize="2dp"
            android:autoSizeTextType="uniform"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:password="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:textColorHint="#070707" />


        <EditText
            android:id="@+id/editemail"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:autoSizeMaxTextSize="2dp"
            android:autoSizeTextType="uniform"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:ems="10"
            android:hint=" Student ID"
            android:inputType="text"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:textColorHint="#090909" />

        <Button
            android:id="@+id/loginmainbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-84dp"
            android:background="@drawable/loginbutton"
            android:padding="20dp"
            android:text="Login"
            android:textColor="#ffffff" />


    </RelativeLayout>
</RelativeLayout>
